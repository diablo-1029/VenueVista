<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <!-- Fixed Top Toolbar -->
    <Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_toolbar"
        android:layout_above="@id/bottom_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/home_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:text="Discover"
                android:textSize="15sp"
                android:fontFamily="@font/righteous_regular"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/home_discover"
                android:textColor="@color/lightblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:text="Available Spaces"
                android:textSize="15sp"
                android:fontFamily="@font/righteous_regular"/>


            <!--boxes1-->
            <androidx.cardview.widget.CardView
                android:id="@+id/box1"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_below="@id/home_discover"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:layout_centerInParent="true">

                <!--CONTENT inside the box of image and textview-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--image inside the cardview-->
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:contentDescription="OUTING"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/outing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:text="OUTING"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/more_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/box1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="More Packages"
                android:textColor="@color/lightblue"
                android:textSize="15sp"
                android:fontFamily="@font/righteous_regular"/>

            <!--box2-->
            <androidx.cardview.widget.CardView
                android:id="@+id/box2"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_below="@id/more_package"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="109dp"
                        android:layout_gravity="center"
                        android:contentDescription="OUTING"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bday"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:text="BIRTHDAY/DEBUT"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--box3-->
            <androidx.cardview.widget.CardView
                android:id="@+id/box3"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_below="@id/box2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/blue">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:contentDescription="OUTING"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wedding"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="WEDDING"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_condensed"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--box4-->
            <androidx.cardview.widget.CardView
                android:id="@+id/box4"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_below="@id/box3"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/blue">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:contentDescription="OUTING"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anniversaries"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="ANNIVERSARIES"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_condensed"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--box5-->
            <androidx.cardview.widget.CardView
                android:id="@+id/box5"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_below="@id/box4"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/blue">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:contentDescription="OUTING"
                        android:scaleType="centerCrop"
                        android:src="@drawable/farewell_party"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="FAREWELL PARTY"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_condensed"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--box6-->
            <androidx.cardview.widget.CardView
                android:id="@+id/box6"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_below="@id/box5"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="20dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:contentDescription="OUTING"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/monthsaries" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:text="MONTHSARIES"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>

    <!-- Fixed Bottom Toolbar -->
    <Toolbar
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/lightblue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">



        <ImageButton
            android:id="@+id/profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:layout_marginLeft="70dp"
            android:src="@drawable/baseline_account_circle_24" />

        <ImageButton
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:layout_marginLeft="70dp"
            android:src="@drawable/baseline_home_24"/>

        <ImageButton
            android:id="@+id/calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:layout_marginLeft="70dp"
            android:src="@drawable/baseline_calendar_month_24"/>


    </Toolbar>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corner2"
        android:drawableEnd="@drawable/baseline_search_24"
        android:hint="Booking Venue"
        android:inputType="text"
        android:padding="9dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"/>
</RelativeLayout>
